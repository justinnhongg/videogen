# AVM - Audio to Video Maker Environment Configuration
# Copy this file to .env and modify as needed

# Project root directory (default: current directory)
AVM_ROOT=.

# Temporary directory for processing (default: system temp)
AVM_TMPDIR=

# GPU acceleration settings
AVM_GPU_ENABLED=false

# Logging configuration
AVM_LOG_LEVEL=INFO
AVM_JSON_LOGS=false

# Default model settings
AVM_WHISPER_MODEL=small
AVM_WHISPER_LANGUAGE=auto

# Performance settings
AVM_THREADS=4
AVM_BATCH_SIZE=1

# Output settings
AVM_DEFAULT_CRF=18
AVM_DEFAULT_PRESET=medium
AVM_DEFAULT_FPS=30

# Audio processing
AVM_TARGET_LUFS=-14.0
AVM_MUSIC_DB=-28

# Paths to common assets (optional)
AVM_DEFAULT_LOGO=examples/logo.png
AVM_DEFAULT_INTRO=examples/intro.mp4
AVM_DEFAULT_OUTRO=examples/outro.mp4
AVM_DEFAULT_MUSIC=examples/music.mp3

# Advanced settings
AVM_DEBUG=false
AVM_VERBOSE=false
